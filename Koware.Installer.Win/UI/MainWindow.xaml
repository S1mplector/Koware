<!-- Author: Ilgaz Mehmetoğlu 
 Installer UI for selecting options and running Koware installation. -->
<Window x:Class="Koware.Installer.Win.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koware Installer v0.7.0-beta"
        Height="480"
        Width="720"
        MinHeight="440"
        MinWidth="620"
        Background="#0B1222"
        Foreground="#E2E8F0"
        Icon="pack://application:,,,/Assets/Logo/logo.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#111827" />
        <SolidColorBrush x:Key="Accent" Color="#38BDF8" />
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Foreground" Value="#0B1222"/>
            <Setter Property="Background" Value="#E2E8F0"/>
        </Style>
        <Style x:Key="ButtonText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0B1222"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid x:Name="WelcomeScreen">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Assets/Logo/logo.ico" Width="56" Height="56" Margin="0,0,12,0"/>
                <StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" Text="Welcome to Koware" />
                    <TextBlock FontSize="14" Text="This installer sets up Koware CLI and player with a single click." />
                </StackPanel>
            </StackPanel>
            <Border Grid.Row="1" Background="{StaticResource PanelBackground}" Padding="16" CornerRadius="6" Margin="0,16,0,16">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="What you'll get:"/>
                    <TextBlock Text="• Fresh Release build of Koware CLI" />
                    <TextBlock Text="• Custom Koware video player bundled" />
                    <TextBlock Text="• PATH updated for 'koware' command" />
                    <TextBlock Margin="0,12,0,0" FontWeight="Bold" Text="Copyright &amp; License" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                        <Run Text="Copyright © Ilgaz Mehmetoglu. "/>
                        <Run Text="Koware is distributed under the license bundled with this installer. Use is allowed under the terms of that license; no warranties are provided; you assume all risk and responsibility for complying with local laws and third-party terms."/>
                    </TextBlock>
                </StackPanel>
            </Border>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="120" Height="36" Click="OnContinue">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE72A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Continue"/>
                    </StackPanel>
                </Button>
                <Button Width="100" Height="36" Margin="8,0,0,0" Click="OnClose">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Close"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="InstallerScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="18" FontWeight="Bold" Text="Koware Installer" />

            <StackPanel Grid.Row="1" Margin="0,12,0,8">
                <TextBlock x:Name="ExistingInstallInfo" Visibility="Collapsed" FontSize="12" Foreground="#A5B4FC" />
                <TextBlock Text="Install directory"/>
                <DockPanel>
                    <TextBox x:Name="InstallPathBox" DockPanel.Dock="Left" MinWidth="420" />
                    <Button x:Name="BrowseButton" Width="110" Margin="8,0,0,0" Click="OnBrowse">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ButtonText}" Text="&#xE838;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Style="{StaticResource ButtonText}" Text="Browse"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </StackPanel>

            <GroupBox Grid.Row="2" Header="Log" Margin="0,8,0,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LogBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" />
                </ScrollViewer>
            </GroupBox>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button x:Name="InstallButton" Width="120" Click="OnInstall">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock x:Name="InstallButtonText" Style="{StaticResource ButtonText}" Text="Install"/>
                    </StackPanel>
                </Button>
                <Button x:Name="UninstallButton" Width="120" Margin="8,0,0,0" Click="OnUninstall" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Remove"/>
                    </StackPanel>
                </Button>
                <Button Width="100" Margin="8,0,0,0" Click="OnClose">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Close"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
