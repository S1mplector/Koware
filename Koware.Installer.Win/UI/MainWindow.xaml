<!-- Author: Ilgaz Mehmetoğlu 
 Installer UI for selecting options and running Koware installation. -->
<Window x:Class="Koware.Installer.Win.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koware Installer"
        Height="480"
        Width="720"
        MinHeight="440"
        MinWidth="620"
        Background="#0B1222"
        Foreground="#E2E8F0">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#111827" />
        <SolidColorBrush x:Key="Accent" Color="#38BDF8" />
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Foreground" Value="#0B1222"/>
            <Setter Property="Background" Value="#E2E8F0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid x:Name="WelcomeScreen">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock FontSize="22" FontWeight="Bold" Text="Welcome to Koware" />
                <TextBlock FontSize="14" Text="This installer sets up Koware CLI and player with a single click." />
            </StackPanel>
            <Border Grid.Row="1" Background="{StaticResource PanelBackground}" Padding="16" CornerRadius="6" Margin="0,16,0,16">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="What you'll get:"/>
                    <TextBlock Text="• Fresh Release build of Koware CLI" />
                    <TextBlock Text="• Koware.Player.Win bundled" />
                    <TextBlock Text="• PATH updated for 'koware' command" />
                    <TextBlock Margin="0,12,0,0" FontWeight="Bold" Text="Copyright &amp; License" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Copyright © Ilgaz Mehmetoglu. "/>
                        <Run Text="Koware is distributed under the license included in the package. Use at your own risk."/>
                    </TextBlock>
                </StackPanel>
            </Border>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Continue" Width="110" Click="OnContinue"/>
                <Button Content="Close" Width="90" Margin="8,0,0,0" Click="OnClose"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="InstallerScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="18" FontWeight="Bold" Text="Koware Installer" />

            <StackPanel Grid.Row="1" Margin="0,12,0,8">
                <TextBlock Text="Install directory"/>
                <DockPanel>
                    <TextBox x:Name="InstallPathBox" DockPanel.Dock="Left" MinWidth="420" />
                    <Button x:Name="BrowseButton" Content="Browse..." Width="100" Margin="8,0,0,0" Click="OnBrowse"/>
                </DockPanel>

                <CheckBox x:Name="PublishCheckbox" Content="Publish fresh Release builds (recommended)" IsChecked="True" IsEnabled="False" />
                <CheckBox x:Name="IncludePlayerCheckbox" Content="Include Koware.Player.Win" IsChecked="True" IsEnabled="False" />
                <CheckBox x:Name="AddToPathCheckbox" Content="Add install directory to user PATH" IsChecked="True" IsEnabled="False" />
                <CheckBox x:Name="CleanCheckbox" Content="Clean install directory before copying" IsChecked="True" />
            </StackPanel>

            <GroupBox Grid.Row="2" Header="Log" Margin="0,8,0,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LogBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="12" />
                </ScrollViewer>
            </GroupBox>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button x:Name="InstallButton" Content="Install" Width="110" Click="OnInstall"/>
                <Button Content="Close" Width="90" Margin="8,0,0,0" Click="OnClose"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
