<!-- Author: Ilgaz Mehmetoğlu 
 Installer UI for selecting options and running Koware installation. -->
<Window x:Class="Koware.Installer.Win.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koware Installer v0.8.1-beta"
        Height="480"
        Width="720"
        MinHeight="440"
        MinWidth="620"
        Background="#0B1222"
        Foreground="#E2E8F0"
        Icon="pack://application:,,,/Assets/Logo/logo.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#111827" />
        <SolidColorBrush x:Key="Accent" Color="#38BDF8" />
        <SolidColorBrush x:Key="ButtonBg" Color="#1E3A5F" />
        <SolidColorBrush x:Key="ButtonHover" Color="#2D4A6F" />
        <SolidColorBrush x:Key="ButtonPressed" Color="#16304F" />
        
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
        </Style>
        
        <!-- Modern rounded button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{StaticResource ButtonBg}" 
                                BorderBrush="#2D4A6F" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3D5A7F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary action button (Install) -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="8"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2563EB" Offset="0"/>
                                    <GradientStop Color="#1D4ED8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#3B82F6" Offset="0"/>
                                            <GradientStop Color="#2563EB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1E40AF" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ButtonText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid x:Name="WelcomeScreen">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/Logo/logo.ico" Width="56" Height="56" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock FontSize="22" FontWeight="Bold" Text="Welcome to Koware" />
                        <TextBlock FontSize="14" Text="This installer sets up Koware CLI and player with a single click." />
                    </StackPanel>
                </StackPanel>
                <!-- Help/Tutorial button (circular) -->
                <Button HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Width="36" Height="36"
                        Click="OnShowTutorial"
                        ToolTip="Open Tutorial"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{StaticResource ButtonBg}" 
                                    BorderBrush="#2D4A6F" 
                                    BorderThickness="1"
                                    CornerRadius="18"
                                    Width="36" Height="36">
                                <TextBlock Text="?" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource Accent}"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHover}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#3D5A7F"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonPressed}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Border Grid.Row="1" Background="{StaticResource PanelBackground}" Padding="16" CornerRadius="6" Margin="0,16,0,16">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="What you'll get:"/>
                    <TextBlock Text="• Fresh Release build of Koware CLI" />
                    <TextBlock Text="• Custom Koware video player bundled" />
                    <TextBlock Text="• PATH updated for 'koware' command" />
                    <TextBlock Margin="0,12,0,0" FontWeight="Bold" Text="Copyright &amp; License" />
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                        <Run Text="Copyright © Ilgaz Mehmetoglu. "/>
                        <Run Text="Koware is distributed under the license bundled with this installer. Use is allowed under the terms of that license; no warranties are provided; you assume all risk and responsibility for complying with local laws and third-party terms."/>
                    </TextBlock>
                </StackPanel>
            </Border>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource PrimaryButton}" Width="130" Click="OnContinue">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE72A;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Continue"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButton}" Width="110" Margin="10,0,0,0" Click="OnClose">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Close"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="InstallerScreen" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="18" FontWeight="Bold" Text="Koware Installer" />

            <StackPanel Grid.Row="1" Margin="0,12,0,8">
                <TextBlock x:Name="ExistingInstallInfo" Visibility="Collapsed" FontSize="12" Foreground="#A5B4FC" />
                <TextBlock Text="Install directory"/>
                <DockPanel>
                    <TextBox x:Name="InstallPathBox" DockPanel.Dock="Left" MinWidth="420" />
                    <Button x:Name="BrowseButton" Style="{StaticResource ModernButton}" Width="110" Margin="8,0,0,0" Click="OnBrowse">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ButtonText}" Text="&#xE838;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Style="{StaticResource ButtonText}" Text="Browse"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </StackPanel>

            <!-- Progress Steps Panel -->
            <Border Grid.Row="2" Background="{StaticResource PanelBackground}" CornerRadius="8" Padding="20" Margin="0,8,0,8">
                <StackPanel x:Name="StepsPanel">
                    <!-- Step items will be added dynamically -->
                    <TextBlock x:Name="StepsPlaceholder" Text="Click Install to begin..." Foreground="#64748B" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button x:Name="InstallButton" Style="{StaticResource PrimaryButton}" Width="140" Click="OnInstall">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock x:Name="InstallButtonText" Style="{StaticResource ButtonText}" Text="Install"/>
                    </StackPanel>
                </Button>
                <Button x:Name="UninstallButton" Style="{StaticResource ModernButton}" Width="130" Margin="10,0,0,0" Click="OnUninstall" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Remove"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButton}" Width="110" Margin="10,0,0,0" Click="OnClose">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ButtonText}" Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Style="{StaticResource ButtonText}" Text="Close"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
