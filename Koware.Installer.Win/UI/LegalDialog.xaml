<!-- Author: Ilgaz Mehmetoğlu
 Modal dialog to display Usage Notice and require acceptance to proceed. -->
<Window x:Class="Koware.Installer.Win.UI.LegalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usage Notice" Height="520" Width="720"
        WindowStartupLocation="CenterOwner"
        Background="#0B1222" Foreground="#E2E8F0"
        ResizeMode="CanResizeWithGrip"
        Icon="pack://application:,,,/Assets/Logo/logo.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#111827" />
        <SolidColorBrush x:Key="Accent" Color="#38BDF8" />
        <SolidColorBrush x:Key="ButtonBg" Color="#1E3A5F" />
        <SolidColorBrush x:Key="ButtonHover" Color="#2D4A6F" />
        <SolidColorBrush x:Key="ButtonPressed" Color="#16304F" />
        
        <!-- Modern rounded button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{StaticResource ButtonBg}" 
                                BorderBrush="#2D4A6F" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3D5A7F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary action button (Accept) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="8"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2563EB" Offset="0"/>
                                    <GradientStop Color="#1D4ED8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#3B82F6" Offset="0"/>
                                            <GradientStop Color="#2563EB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1E40AF" Offset="0"/>
                                            <GradientStop Color="#1E3A8A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Image Source="pack://application:,,,/Assets/Logo/logo.ico" Width="40" Height="40" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock FontSize="18" FontWeight="Bold" Text="Usage Notice"/>
                <TextBlock FontSize="12" Text="Please read carefully and accept to continue installation."/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Background="{StaticResource PanelBackground}" Padding="12" CornerRadius="6" Margin="0,10,0,10">
            <FlowDocumentScrollViewer VerticalScrollBarVisibility="Auto" Foreground="#E2E8F0" Background="Transparent">
                <FlowDocument FontFamily="Segoe UI" FontSize="14" Foreground="#E2E8F0" Background="Transparent">
                    <Paragraph>
                        <Run Text="Koware is a locally-hosted tool that aggregates and presents links to content already publicly available on the internet."/>
                        <LineBreak/>
                        <Run Text="It does not host or distribute media."/>
                    </Paragraph>

                    <Paragraph>
                        <Bold><Run Text="What Koware does NOT do"/></Bold>
                    </Paragraph>
                    <List MarkerStyle="Disc">
                        <ListItem>
                            <Paragraph>Koware does not include or support bypassing paywalls or DRM.</Paragraph>
                        </ListItem>
                        <ListItem>
                            <Paragraph>Do not use Koware to circumvent technical protection measures (DRM, encryption, access controls) or paywalls.</Paragraph>
                        </ListItem>
                        <ListItem>
                            <Paragraph>Such circumvention may be unlawful (for example, under US DMCA 17 U.S.C. §1201) and similar laws elsewhere.</Paragraph>
                        </ListItem>
                    </List>

                    <Paragraph>
                        <Bold><Run Text="Your responsibilities"/></Bold>
                    </Paragraph>
                    <List MarkerStyle="Disc">
                        <ListItem>
                            <Paragraph>Your use must comply with local laws, website terms of service, and third‑party rights.</Paragraph>
                        </ListItem>
                        <ListItem>
                            <Paragraph>You assume all risk and responsibility for how you access and use any content discovered via Koware.</Paragraph>
                        </ListItem>
                    </List>

                    <Paragraph>
                        <Italic>This information is provided for awareness only and is not legal advice.</Italic>
                    </Paragraph>
                </FlowDocument>
            </FlowDocumentScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="DeclineButton" Style="{StaticResource ModernButton}" Content="Decline" Width="110" Margin="0,0,8,0" Click="OnDecline"/>
            <Button x:Name="AcceptButton" Style="{StaticResource PrimaryButton}" Content="I Accept" Width="130" IsDefault="True" Click="OnAccept"/>
        </StackPanel>
    </Grid>
</Window>
