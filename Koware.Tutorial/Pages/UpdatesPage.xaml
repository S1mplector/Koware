<Page x:Class="Koware.Tutorial.Pages.UpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:Koware.Tutorial.Controls"
      Title="Updates"
      Background="Transparent">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Koware.Tutorial;component/Styles/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="ðŸ”„ Updates" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource AccentBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Keep Koware up to date with the latest features." 
                       FontSize="14" 
                       Foreground="{StaticResource SecondaryBrush}"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Checking for Updates" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBlock TextWrapping="Wrap" 
                       Foreground="{StaticResource SecondaryBrush}"
                       Margin="0,0,0,12">
                Use the update command to check if a newer version is available:
            </TextBlock>
            <controls:FakeTerminal x:Name="Terminal1" Height="140" Margin="0,0,0,16"/>
            
            <TextBlock Text="Installing Updates" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBlock TextWrapping="Wrap" 
                       Foreground="{StaticResource SecondaryBrush}"
                       Margin="0,0,0,12">
                When an update is available, Koware can download and install it automatically:
            </TextBlock>
            <controls:FakeTerminal x:Name="Terminal2" Height="180" Margin="0,0,0,16"/>
            
            <TextBlock Text="Version Information" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBlock TextWrapping="Wrap" 
                       Foreground="{StaticResource SecondaryBrush}"
                       Margin="0,0,0,12">
                Check your current version at any time:
            </TextBlock>
            <controls:FakeTerminal x:Name="Terminal3" Height="100" Margin="0,0,0,16"/>
            
            <Border Background="#1E3A5F" CornerRadius="6" Padding="12" Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¡" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock TextWrapping="Wrap" VerticalAlignment="Center">
                        <Run Text="Tip:" FontWeight="SemiBold"/>
                        <Run Text=" Run 'koware doctor -c updates' to check for updates as part of diagnostics."/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
